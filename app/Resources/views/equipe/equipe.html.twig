{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/combat.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Varela' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Cinzel+Decorative" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('css/equipe.css') }}">

{% endblock %}

{% block body %}
        <div class="drapeau">
            <div class="row">
               <div class="glitch" data-texte="Teams">TEAMS</div>
                {% for entity in equipes %}

                    <div class="col-sm-4 col-md-3 col-lg-3">
                        <a href="">
                            <div class="thumbnail carte">
                                <a href="/equipe/{{ entity.id }}"><img src="{{ entity.drapeau }}" alt="drapeau{{ entity.nomEquipe }}"></a>
                                <div class="caption">
                                    <h3>{{ entity.nomEquipe }}</h3>
                                </div>
                            </div>
                        </a>
                    </div>

                {% endfor %}
            </div>
        </div>

{% endblock %}
{% block javascripts %}

        <script src="{{ asset('../js/app.js') }}"></script>
{% endblock %}