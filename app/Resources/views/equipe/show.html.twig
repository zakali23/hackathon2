{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/joueur.css') }}">
{% endblock %}

{% block body %}

    <div class="drapeau">
        <div class="row">
            <h1>Joueurs Equipe</h1><br>
            <div class="btn btn-default btn-lg">
                <a href="/equipe/">Return To Team</a>
            </div>
            <br><br>
            {% for joueur in equipe.idEquipes %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail carte">
                        <img src="{{ joueur.photo }}" alt="...">
                        <div class="caption">
                            <h3>{{ joueur.nom }}</h3>
                            <h5>{{ joueur.arme }}</h5>

                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
        {% if delete_form is defined %}
            <ul>
                <li>
                    <a href="{{ path('equipe_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('equipe_edit', { 'id': equipe.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        {% endif %}
    </div>


{% endblock %}
