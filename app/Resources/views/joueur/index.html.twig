
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}
{% block header %}
{% endblock %}
{% block body %}
    <h1 style="text-align: center">Joueurs list</h1>
    <a style="text-align: center" href="{{ path('user_new') }}" >Back to the admin page</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Arme</th>
                <th>Photo</th>
                <th>Actions</th>
                <th>Equipe</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td><a href="{{ path('joueur_show', { 'id': joueur.id }) }}">{{ joueur.id }}</a></td>
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.arme }}</td>
                <td>
                    <img src="{{ joueur.photo }}" alt="drapeau"></td>
                <td>{{ joueur.idEquipe.nomEquipe }}</td>
                        <td>
                            <a href="{{ path('joueur_edit', { 'id': joueur.id }) }}" class="btn btn-info playBtn">edit</a>
                        </td>


            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('joueur_new') }}">Create a new joueur</a>
        </li>
    </ul>
{% endblock %}
