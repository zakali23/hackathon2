{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/joueur.css') }}">
{% endblock %}

{% block body %}
    <div class="drapeau">
        <div class="row">

            {% for entity in joueurs %}
                    <div class="col-sm-4 col-md-3 col-lg-3">
                            <div class="thumbnail carte">
                                <img src="{{ entity.photo }}" alt="drapeau{{ entity.nom }}">
                                <div class="caption">
                                    <h3>{{ entity.nom }}</h3>
                                    <h4>{{ entity.arme }}</h4>
                                    <p>{{ entity.idEquipe }}</p>
                                </div>
                            </div>
                    </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}