
{% block stylesheet %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('/css/admin.css') }}">
{% endblock %}

{% block header %}
{% endblock %}

    {% block content %}

        <div class="container py-5">
            <div class="row">
                <div class="col-md-12">

                    <div class="row">
                        <div class="col-md-6 mx-auto">

                            <!-- form card login -->
                            <div class="card rounded-0">
                                <div class="card-header">
                                    <h1 class="mb-0">Login</h1>
                                </div>
                                <div class="card-body">
                                    <form action="{{ path('user_new') }}" class="form" role="form" autocomplete="off" name="formLogin" novalidate="" method="POST">
                                        <div class="form-group">
                                            <label for="uname1">Nom d'utilisateur</label>
                                            <input type="text" class="form-control form-control-lg rounded-0" name="user" id="uname1" required="">
                                            <div class="invalid-feedback">Veuillez entrer votre nom d'utlisateur</div>
                                        </div>
                                        <div class="form-group">
                                            <label>Mot de passe</label>
                                            <input type="password" class="form-control form-control-lg rounded-0" name="pwd" required="" autocomplete="new-password">
                                            <div class="invalid-feedback">Veuillez entrer votre mot de passe</div>
                                        </div>

                                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin" value="{{ 'security.login.submit'|trans }}">Se connecter</button>
                                    </form>
                                </div>
                                <!--/card-block-->
                            </div>
                            <!-- /form card login -->

                        </div>


                    </div>
                    <!--/row-->

                </div>
                <!--/col-->
            </div>
            <!--/row-->
        </div>
        <!--/container-->
    {% endblock %}
    {% block footer %}

    {% endblock %}

    {% block javascript %}
        <script type="text/javascript" src="{{ asset('/js/login.js') }}"></script>
    {% endblock %}
